
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
        <div class="card">
            <div class="card-body">
            <h2 class="card-title">Mi perfil</h2>

                <% if @user.profile_picture.attached? %>
                <h3>Profile Picture</h3>
                <%= image_tag @user.profile_picture %>
                <% end %>

            <p class="card-text"><strong>Email:</strong> <%= @user.email %></p>
            </div>
            
            <%= link_to "Agregar foto de perfil", edit_profile_path %>
            
        </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <h3>Postulaciones</h3>
            <ul class="list-group">
                <% @applications.each do |application| %>
                <li class="list-group-item">
                    <strong>Titulo postulaci√≥n:</strong> <%= application.joboffer.title %><br>
                    <strong>Fecha postulacion:</strong> <%= application.created_at %>

                </li>
                <% end %>
            </ul>
        </div>
    </div>
</div>
